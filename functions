#-------------------------------------------------------------------
mvf() {
# move file(s) and then cd into the destination folder
if  mv "$@"; then
        shift $(($#-1))
        if [ -d $1 ]; then
                cd ${1}
        else
                cd $(dirname ${1})
        fi
fi
}

#-------------------------------------------------------------------
# Get ID of named process
pidof () { ps -Ac | egrep -i $@ | awk '{print $1}'; }

#-------------------------------------------------------------------
space() { # Shows disk use
	echo ""
	df -Hl # | awk '{ printf("%-7s%-7s%-7s%-11s%-14s\n", $1, $2, $3, $4, $5, $6) }'
	echo ""
}

