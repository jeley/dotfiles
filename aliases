#!/usr/bin/env bash

# Easier navigation: .., ..., ...., ....., ~ and -
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."
alias -- -="cd -"

# Shortcuts
alias db="cd $HOME/Dropbox"
alias dl="cd $HOME/Downloads"
alias d="cd $HOME/Desktop"
<<<<<<< HEAD
