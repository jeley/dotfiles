alias ne='/usr/bin/vim $HOME/Documents/Sandbox/unx/u/notes.txt'
alias pro='/usr/bin/vim $HOME/dotfiles/bash_profile'
alias rc='/usr/bin/vim $HOME/dotfiles/bashrc'
